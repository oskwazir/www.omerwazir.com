/*
 * Variables
 */

red= #B9121B
maroon= #4C1B1B
paleYellow= #F6E497
creamy= #FCFAE1
tan= #BD8D46
lightGrey=#EFF2F5
white= #FFF
textGrey= #444
sans-serif-family= "jaf-bernina-sans","Avenir Next","Helvetica Neue", Helvetica, Arial, sans-serif
header-family= "jaf-bernina-sans-condensed", sans-serif-family
subtleBorder= 1px solid #f0f0f0

.pop, .site-title,.site-page,h1, .h1,h2, .h2,h3, .h3,h4, .h4,h5, .h5,h6, .h6 
  font-family header-family
  font-weight 600

body 
  font-family sans-serif-family  

body,pre,code, h1, .h1,h2, .h2,h3, .h3,h4, .h4h5, .h5,h6, .h6  
  color textGrey

body,.jumbotron
  background-color white

pre,code, .archivedPost:hover
  background-color creamy

pre
  border 1px solid paleYellow

blockquote
  font-style italic

.lead
  font-weight 400

.pop
  color red   

.line-through
  text-decoration line-through

.blog-post-title, .page-title
  font-size 40px
  font-size 4rem  

blockquote, .site-title, .site-page, .blog-post-date, .archivedPost, .post-content, .page-content
  font-size 20px
  font-size 2rem

.site-title  
  line-height 55px

.navigation-bar
  background-color red
  padding 20px 35px
  margin 0 0 25px 0
  &:hover
    text-decoration none

.site-page-list
  float right !important;

.site-page-list > li:nth-child(2)
  margin-left 2em
  
.site-title, .site-title:hover, .site-page, .site-page:hover
  color creamy
  text-decoration none

.site-page
  line-height 55px

/* Small devices (tablets, 768px and up) */
@media (min-width: 992px)
  .container
    width 970px

/* Small devices (tablets, 768px and down) */
@media (max-width: 768px)
  
  .navigation-header
    text-align center
    margin-bottom 12px

  .navigation-menu
    text-align center    

  .navigation-bar
    padding 20px 20px

  .site-title
    margin-bottom 25px

  .site-page
    line-height 24px

  .site-page-list
    float none !important  

  .site-page-list > li:nth-child(2)
    float right !important

  .lead, .post-content, .page-content
    font-size 16px
    font-size 1.6rem

.blog-post, blog-page
  border-bottom subtleBorder
  padding 20px 0px

.archiveList li
  border-bottom subtleBorder

.archiveList li
   &:last-child
    border-bottom none

.blog-post, .archivedPost, .blog-page
  transition all 0.3s ease-out

.archivedPost
  color textGrey
  text-decoration none
  display block
  padding 2em 1em
  &:hover 
    color textGrey
    text-decoration none
    border-radius 2px

.spacedapart
  letter-spacing 2px

.blog-post-title, .page-title, .blog-post, blog-page
  margin-bottom 16px
