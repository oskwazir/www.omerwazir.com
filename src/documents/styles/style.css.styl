/*
 * Globals
 */

red= #B9121B
maroon= #4C1B1B
paleYellow= #F6E497
creamy= #FCFAE1
tan= #BD8D46
lightGrey=#EFF2F5
white= #FFF
sans-serif-family= "freight-sans-pro","Avenir Next","Helvetica Neue", Helvetica, Arial, sans-serif
serif-family= "ff-tisa-web-pro",Georgia, "Times New Roman", Times, serif

html,body
  height 100%

body 
  font-family sans-serif-family
  color #444
  background-color white

.jumbotron
  background-color white

pre
  background-color creamy
  border 1px solid paleYellow


.navbar
  border-radius 0px

.navbar-inverse, .blog-footer
  background-color red
  border-color red
  
.blog-footer,.navbar-inverse .navbar-brand, .navbar-inverse .navbar-nav > li >a
  color creamy

h1, .h1,h2, .h2,h3, .h3,h4, .h4,h5, .h5,h6, .h6 
  margin-top 0
  font-weight 500
  color #333

.sans-serif, h1, .h1,h2, .h2,h3, .h3,h4, .h4,h5, .h5,h6, .h6 
  font-family sans-serif-family


article
  border-bottom 1px solid #f0f0f0
  padding-bottom 60px
  margin-bottom 20px

.archiveList li
  border-bottom 1px solid #f0f0f0


.archivedPost
  color #555
  text-decoration none
  display block
  padding 2em 1em
  transition all 0.2s ease-out
  // border-top 1px solid #e3e3e3
  &:hover 
    color #222
    text-decoration none
    background-color rgba(250, 250, 250, 0.15)
    border-radius 2px

.white-text
  color #fff

.condensedHeading
  letter-spacing -1px

.spacedHeading, .blog-post h3
  letter-spacing 2px

.archiveList li
   &:last-child
    border-bottom none
    


/*
 * Override Bootstrap's default container.
 */

